      {
        title: 'Cyber Security',
        description: "multi-layered security protocols to fortify your digital assets against evolving threats and ensure total data integrity.",
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Connected',
        href: 'https://wa.me/13468295870',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  >
    <Fragment slot="title">
      Drive on a Road&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">to Digital Success</span>
    </Fragment>

    <Fragment slot="subtitle">
      Step into a world where AI-driven innovation elevates your business to new heights. Don’t just follow the market—lead it from the front.
    </Fragment>
  </CallToAction>

  <!-- Stats Widget ****************** -->

