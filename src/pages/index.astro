---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
//import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
//import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';


const metadata = {
  title: 'SolutionPlanets — Digital and IT partner providing web development and marketing solutions for SMBs',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  
  <!-- Hero Widget ******************* -->

  <Hero2
    tagline="Your Vision, Our Universe"
    actions={[
      {
        variant: 'primary',
        text: "Let's Talk",
        href: 'https://wa.me/13468295870',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
      { text: 'Explore Our Services', href: '#features2' },
    ]}
    image={{ src: '~/assets/images/hero-image1.png', alt: 'SP Hero Image' }}
  >
    <Fragment slot="title">              
      <span class="text-accent dark:text-white">Digital Transformation Reimagined</span>
      <span class="hidden xl:block">At Solution Planets</span>         
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
         
        <span class="font-semibold">Solution Planets empowers growing businesses</span> with high-performance software development, autonomous AI Agents, and next-gen digital marketing. We don’t just build tools; we build your digital future.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Autonomous development and next-gen digital marketing
      for growing businesses of all sizes.</span>
    </Fragment>
  </Hero2>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Continuous integration of innovative technologies" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Our Framework"
    title="Transform your objectives into a roadmap"
    subtitle="Our Strategic Orbit: We don’t believe in guesswork. Our methodology ensures your project is secure, scalable, and lightyears ahead of the competition."
    items={[
      {
        title: 'Identify',
        description:
          'We dive deep into your goals and audience to ensure every line of code serves a specific business purpose.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Analyze',
        description:
          'We leverage AI-driven insights to construct a high-precision framework for each project, optimizing strategy, production, and delivery timelines.',
        icon: 'tabler:components',
      },
            {
        title: 'Implement',
        description:
          'Our team translates complex plans into sleek, purposeful designs and functional final products that aligns with business goals.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Improve',
        description:
          'We use monitoring and analytics tools to evaluate performance, ensuring continuous improvement, predictive maintenance, and seamless scaling.',
        icon: 'tabler:arrows-right-left',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Partner With Us?"
    title="Fun Meets Functionality"
    items={[
      {
        title: 'Continuous Innovation:',
        description:
          'We utilize the most starred and suported frameworks to keep you at the cutting edge.',
      },
      {
        title: 'Security-First Mindset:',
        description:
          'We build user-friendly experiences that never compromise on data integrity or lasting value.',
      },
      {
        title: 'Collaborative Culture:',
        description:
          'We embrace new ideas and open contributions, fostering a dynamic environment where your feedback fuels our innovation.',
      },
    ]}
    image={{
      src: '~/assets/images/feature.png', alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building On Modern Foundations</h3>
      Gain a competitive advantage by incorporating industry leading practices
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Strategy Meets Structure"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Architect</span>',
        description:
          "Designing the Blueprint. We map out your digital architecture. This involves aligning your business goals with the right technology stack and AI frameworks to ensure a foundation that is built to scale",
        icon: 'tabler:package',
      },
      {
        title: 'Step 2: <span class="font-medium">Integrate</span>',
        description:
          "Bringing the Ecosystem to Life. We weave together custom software, autonomous AI Agents, and modern marketing tools into one cohesive, high-performance ecosystem that works in total harmony.",
        icon: 'tabler:letter-case',
      },
      {
        title: 'Step 3: <span class="font-medium">Calibrate</span>',
        description:
          'Precision Fine-Tuning. Using AI-driven analytics, we stress-test and optimize every component. We calibrate for speed, security, and user experience, ensuring your platform is perfectly tuned to your audience’s needs.',
        icon: 'tabler:paint',
      },
      {
        title: 'Deploy!',
        description:
          "Ignition & Beyond. Your solution is live and mission-ready. But we don't stop there—Solution Planets provides the ongoing monitoring and proactive updates needed to keep you leading the market.",
        icon: 'tabler:check',
