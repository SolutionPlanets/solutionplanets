---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
//import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Brands from '~/components/widgets/Brands.astro';

import { YouTube } from 'astro-embed';

const metadata = {
  title: 'About Company - Solution Planets',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero2
    tagline="Our Origin & Evolution"
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Watch Video',
        href: 'https://www.youtube.com/@solutionplanets9122',
        icon: 'tabler:brand-youtube',
      },
      { text: 'Connect With Us', 
        href: 'https://www.linkedin.com/company/solutionplanets/', 
        target: '_blank',
        icon: 'tabler:brand-linkedin',

     },
    ]}
  >
    <Fragment slot="title">
      <span class="hidden sm:inline">Beyond the Horizon:</span>
      <span class="text-accent dark:text-white"></span>
      The Solution Planets Story
    </Fragment>

    <Fragment slot="subtitle">
      Established at the dawn of the 21st century, <span class="font-semibold">Solution Planets</span> was born from a vision to simplify the infinite complexities of the digital universe.
    </Fragment>

    <Fragment slot="image">
      <YouTube id="gxBkghlglTg" title="Astro just Launched.... Could it be the ultimate web framework?" />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 100%;
        }
      </style>
    </Fragment>
  </Hero2>

  <!-- Features2 Widget ************** -->

  <Features2
    title="About us"
    subtitle="we bring world-class creativity directly to your digital doorstep. Our journey has been defined by a simple shift in perspective: we don't just work for you—we work with you. We transcend the traditional vendor-client dynamic to become your dedicated IT partners, ensuring that every technological leap we take is one that lands your business exactly where it needs to be."
  >
    <Fragment slot="bg">
       <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-slate-900 dark:via-blue-900 dark:to-slate-900"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->
  <Stats
    title='The Blueprint: Our "One-Roof" Process'
    subtitle="Our approach is intentionally straightforward, designed to bridge the gap between a raw idea and a profound audience connection."
    stats={[
      { title: 'Identify', amount: 'Understanding the DNA of your brand and goals.' },
      { title: 'Plan & Design', amount: 'Mapping the architecture of your digital future.' },
      { title: 'Implement', amount: 'Building high-integrity software and AI-driven tools.' },
      { title: 'Nurture', amount: 'Scaling and improving your product long after launch.' },
    ]}
  />

  <!-- Brands Widget ****************** -->
  <Brands
    title="Partnerships & Collaborations"
    subtitle="At Solution Planets, we believe in the power of collaboration to drive innovation and create exceptional experiences."
    icons={[]}
    images={[
      {
        src: '~/assets/images/partner/cr.png', alt: 'Our partners',
      },
      {
        src: '~/assets/images/partner/ctrlS.png', alt: 'Our partners',
      },
      {
        src: '~/assets/images/partner/ENTP.png', alt: 'Our partners',
