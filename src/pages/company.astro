      },
      {
       src: '~/assets/images/partner/cr.png', alt: 'Our partners',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Our Infinite Commitment"
    subtitle="As your lifelong IT Solution Partner, we don't just deliver a product and disappear. We are committed to providing the fuel for your long-term orbit."
    items={[
      {
        title: 'Clarity',
        description:
          'Real-time answers to your most complex technical questions.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Innovation',
        description:
          'Access to state-of-the-art tech services that keep you ahead of the curve.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Empowerment',
        description:
          'The exact tools and strategies required for sustained online success.',
        icon: 'flat-color-icons:voice-presentation',
      },
      {
        title: 'AI-First Mentality',
        description:
          'Future-proofing every project we touch by adding necessary automation.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Digital Culture',
        description:
          'Agile, creative, always available and connected.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Technical Support',
        description:
          'Providing customer support for any implementation issues.',
        icon: 'flat-color-icons:voice-presentation',
      },
    ]}
  >
    <Fragment slot="bg">
       <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

