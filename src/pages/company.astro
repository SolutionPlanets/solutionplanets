  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Connected',
        href: 'https://wa.me/13468295870',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  >
    <Fragment slot="title">Be a part of our vision</Fragment>

    <Fragment slot="subtitle">
